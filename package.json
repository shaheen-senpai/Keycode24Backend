{
  "name": "keycode24-backend-service",
  "private": true,
  "version": "1.0.0",
  "description": "Service for keycode neural-nomads",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:debug": "TZ=UTC nest start --debug --watch",
    "start:server": "node dist/main",
    "start:server-with-cron": "node dist/main --additionalModules=cron",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d ./src/common/config/ormconfig.ts",
    "typeorm-server": "node ./node_modules/typeorm/cli.js -d ./dist/common/config/ormconfig.js",
    "create-migration": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create ./src/common/migrations/$npm_config_name",
    "run-migrations": "npm run typeorm -- migration:run",
    "run-server-migrations": "npm run typeorm-server -- migration:run",
    "generate-migrations": "npm run typeorm -- migration:generate ./src/common/migrations/$npm_config_name",
    "rollback-migration": "npm run typeorm -- migration:revert",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@keyvaluesystems/nestjs-dataloader": "^3.1.2",
    "@nestjs/axios": "^3.0.3",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^9.3.7",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.3.7",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/terminus": "^9.1.4",
    "@nestjs/typeorm": "^10.0.2",
    "@types/yargs": "^17.0.33",
    "bcrypt": "^5.1.0",
    "cache-manager": "4.1.0",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "csv-parse": "^5.3.4",
    "dataloader": "^2.1.0",
    "entities": "^4.5.0",
    "express-http-context": "^1.2.4",
    "handlebars": "^4.7.8",
    "joi": "^17.13.3",
    "moment": "^2.30.1",
    "typeorm-naming-strategies": "^4.1.0",
    "typeorm-transactional": "^0.5.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cache-manager-redis-store": "^2.0.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/hapi__joi": "^17.1.9",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/node-jose": "^1.1.10",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.0",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.3",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "4.9.5"
  },
  "resolutions": {
    "fs-capacitor": "^8.0.0",
    "graphql-upload": "^13.0.0"
  },
  "jest": {
    "testTimeout": 100000000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.resolver.ts",
      "src/**/*.service.ts",
      "src/**/*.helper.ts",
      "src/common/health/health.controller.ts"
    ],
    "testEnvironment": "node",
    "testRegex": ".*\\.test.ts$"
  }
}
